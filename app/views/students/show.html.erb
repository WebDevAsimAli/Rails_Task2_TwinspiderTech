<div class="container">
  <p class="notice"><%= notice %></p>

  <%= render @student %>

  <div class="btn-group">
    <%= link_to "Edit", edit_student_path(@student), class: "btn btn-secondary" %>
    <%= link_to "Back to Students", students_path, class: "btn btn-secondary" %>
    <%= button_to "Destroy", @student, method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" } %>
  </div>
</div>
